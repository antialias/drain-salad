# Image Generation Configuration
# Copy this to .env and add your actual API keys

# === API Keys ===

# Replicate API (for Stable Diffusion with IP-Adapter face reference)
# Get key from: https://replicate.com/account/api-tokens
REPLICATE_API_TOKEN=your_replicate_token_here

# OpenAI API (for DALL-E 3 - no reference image support)
OPENAI_API_KEY=your_openai_key_here

# === Image Generation Settings ===

# Which backend to use: replicate, comfyui, automatic1111, dalle
IMAGE_GEN_BACKEND=replicate

# Reference image for author photos (will be created during setup)
AUTHOR_REFERENCE_IMAGE=manuscript/images/reference/author-reference.png

# === Replicate Settings ===
# Model for author photos with face reference
REPLICATE_FACE_MODEL=zsxkib/instant-id:98aa0c1ba8dd2940b3e03dd47406bf3b80a14c9dfcde0a8b17d2c5e9f40c0fc9

# Model for food/general photography
REPLICATE_PHOTO_MODEL=stability-ai/sdxl:39ed52f2a78e934b3ba6e2a89f5b1c712de7dfea535525255b1aa35c5565e08b

# === Local API Settings (if using local Stable Diffusion) ===

# ComfyUI API endpoint (if running locally)
COMFYUI_API_URL=http://127.0.0.1:8188

# Automatic1111 API endpoint (if running locally)
A1111_API_URL=http://127.0.0.1:7860

# === Output Settings ===
OUTPUT_WIDTH=3072
OUTPUT_HEIGHT=2048
OUTPUT_FORMAT=png
