{
  "name": "drain-salad",
  "version": "0.1.0",
  "description": "A Treatise on Edible Entropy, Upstream Capture, and the Cuisine of Second Harvest",
  "main": "index.js",
  "scripts": {
    "lint": "markdownlint manuscript/**/*.md drafts/**/*.md",
    "lint:fix": "markdownlint --fix manuscript/**/*.md drafts/**/*.md",
    "build:epub": "pandoc manuscript/metadata.yaml manuscript/chapter-*.md -o build/drain-salad.epub --toc --toc-depth=2 --epub-cover-image=cover-ideas/cover-final.jpg",
    "build:pdf": "pandoc manuscript/metadata.yaml manuscript/chapter-*.md -o build/drain-salad.pdf --toc --toc-depth=2 -V geometry:margin=1in",
    "build:html": "pandoc manuscript/metadata.yaml manuscript/chapter-*.md -o build/drain-salad.html --toc --toc-depth=2 --standalone --css=styles/book.css",
    "build": "npm run build:epub && npm run build:pdf && npm run build:html",
    "watch": "nodemon -e md -w manuscript -x 'npm run build:epub'",
    "clean": "rm -rf build/* && mkdir -p build",
    "wordcount": "wc -w manuscript/chapter-*.md | tail -1"
  },
  "keywords": [
    "cookbook",
    "zero-waste",
    "sustainability",
    "food-scraps"
  ],
  "author": "Your Name",
  "license": "UNLICENSED",
  "private": true,
  "devDependencies": {
    "markdownlint-cli": "^0.37.0",
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
